{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": 0,
    "react/no-array-index-key": 1,
    "react/jsx-boolean-value": 1,
    "react/jsx-props-no-spreading": 1,
    "jsx-a11y/anchor-is-valid": 1,
    "import/no-extraneous-dependencies": 1,
    "no-unused-vars": [
      1,
      {
        "ignoreRestSiblings": false
      }
    ],
    "spaced-comment": 0,
    "no-console": 1,
    "object-shorthand": 1,
    "prettier/prettier": [
      1,
      {
        "endOfLine": "auto"
      }
    ]
  }
}
